<!DOCTYPE html>
<html>
<head>
  <title>Bviolin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">
		<%= link_to items_path do %>
			<h1>Main title</h1>
		<% end %>
		<hr/>

		<% if flash[:error] %>
	      <p class="error"><%= flash[:error] %></p>
	    <% end %>
	    <% if flash[:notice] %>
	      <p class="notice"><%= flash[:notice] %></p>
	    <% end %>
	
		<%= yield %>
	
		<hr/>
	</div>
</body>
</html>
