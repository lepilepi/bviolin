<h1>Your cart <%= @session %></h1>
<table id="cart">
	<tr>
		<th>Name</th>
		<th>Quantity</th>
		<th>Price</th>
		<th><a href="#">remove all</a></th>
	</tr>
	<% @item_hash.each do |item, amount| %>
		<tr>
			<td><%= item.name %></td>
			<td><%= amount %></td>
			<td><%= amount*item.price %> EUR</td>
			<td><a href="#">remove</a></td>
		</tr>
	<% end %>
</table>

<br/>
<br/>

<div id="cart_bottom">
	<strong>Total: 1098 EUR</strong>
	<%= form_tag("/search", :method => "get") do %>
		<%= submit_tag("Checkout") %>
	<% end %>
</div>